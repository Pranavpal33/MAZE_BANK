<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B8D5D2"
    android:scrollbarSize="14sp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="143dp"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        android:text="Your Profile"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/EmailDisp"
        android:layout_width="181dp"
        android:layout_height="43dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="16dp"
        android:text="Your Email"
        android:textAlignment="center"
        android:textColor="#050505"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_header" />

    <TextView
        android:id="@+id/PhoneDisp"
        android:layout_width="181dp"
        android:layout_height="38dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="16dp"
        android:text="Your Phone Number"
        android:textAlignment="center"
        android:textColor="#050505"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EmailDisp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="87dp"
        android:layout_height="38dp"
        android:layout_marginTop="36dp"
        android:text="Name :"
        android:textAlignment="center"
        android:textColor="#050505"
        app:layout_constraintEnd_toStartOf="@+id/name_header"
        app:layout_constraintHorizontal_bias="0.279"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/name_header"
        android:layout_width="181dp"
        android:layout_height="38dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="16dp"
        android:text="HELLO"
        android:textAlignment="center"
        android:textColor="#050505"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="87dp"
        android:layout_height="38dp"
        android:layout_marginTop="44dp"
        android:text="E-Mail :"
        android:textAlignment="center"
        android:textColor="#050505"
        app:layout_constraintEnd_toStartOf="@+id/EmailDisp"
        app:layout_constraintHorizontal_bias="0.291"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="113dp"
        android:layout_height="38dp"
        android:layout_marginTop="36dp"
        android:text="Phone Number :"
        android:textAlignment="center"
        android:textColor="#050505"
        app:layout_constraintEnd_toStartOf="@+id/PhoneDisp"
        app:layout_constraintHorizontal_bias="0.352"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/dobprofile"
        android:layout_width="181dp"
        android:layout_height="38dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="16dp"
        android:text="Date of birth"
        android:textAlignment="center"
        android:textColor="#050505"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PhoneDisp" />

    <TextView
        android:id="@+id/DOB_Profile"
        android:layout_width="103dp"
        android:layout_height="39dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="76dp"
        android:text="Date of Birth :"
        android:textAlignment="center"
        android:textColor="#050505"
        app:layout_constraintEnd_toStartOf="@+id/dobprofile"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="101dp"
        android:layout_height="36dp"
        android:layout_marginTop="4dp"
        android:text="Account Details"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/viewp_accnumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dobprofile"
        app:layout_constraintVertical_bias="0.454" />

    <TextView
        android:id="@+id/viewp_accnumber"
        android:layout_width="397dp"
        android:layout_height="231dp"
        android:layout_marginBottom="4dp"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>